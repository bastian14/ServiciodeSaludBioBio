<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.ubiobio.serviciodesaludbio_bio.SaludRespondeActivity">

    <!-- TextView contiene el banner con el nombre de la seccion ocupa, el 5% de la pantalla-->
    <!-- ImageView contiene un banner con imagen, ocupa el 15% de la pantalla-->
    <!-- LinearLayout contendra el futuro cuerpo de la seccion, ocupa el 80% de la pantalla-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".05"
        android:gravity="center"
        android:text="Salud Responde"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:scaleType="centerCrop"
        android:src="@drawable/img_llamada"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".80">

    </LinearLayout>

</LinearLayout>
